model Transaction {
  id          Int            @id @default(autoincrement())
  type        String 
  amount      Float

  accountId   Int
  account     Account        @relation(fields: [accountId], references: [id], onDelete: Cascade)
  user        User           @relation(fields: [userId], references: [id])
  userId      Int

  createdAt   DateTime       @default(now()) @map("created_at")

  @@map("transactions")
}