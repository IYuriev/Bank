model User {
  id           Int            @default(autoincrement()) @id
  email        String         @unique
  password     String
  role         String         @default("USER")
  isBlocked    Boolean        @default(false)

  accounts Account[]
  transactions Transaction[]
  deposits Deposit[]

  createdAt    DateTime       @default(now()) @map("created_at")

  @@map("users")
}

enum Role {
  USER
  ADMIN
}