model Account {
  id           Int            @id @default(autoincrement())
  currency     String
  balance      Decimal          @default(0.00)

  user         User           @relation(fields: [userId], references: [id])
  userId       Int
  transactions Transaction[]
  deposits Deposit[]

  createdAt    DateTime       @default(now()) @map("created_at")

  @@map("accounts")
}